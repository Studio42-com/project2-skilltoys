<%- include('../partials/header') %>


Show Page landing Page show.ejs

<section id="show-page">
    <div>Brand: </div>
    <div><%= skilltoy.brand %></div>
    <div>Model: </div>
    <div><%= skilltoy.model %></div>
    <div>Picture:</div>
    <div><img src=" <%= skilltoy.image %>" width=25% height=25%></div>


  </section>

<h2>Quick Reviews</h2>
<% if (user) { %>
<form id="add-review-form" method="POST" action="/skilltoys/<%= skilltoy._id %>/reviews">
    <label>Review:</label>
    <textarea name="content"></textarea>
    <input type="submit" value="Add Review">
  </form>
  <% } %>

  <% if (skilltoy.reviews) { %>
  
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
          <th>Review</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0 %>
        <% skilltoy.reviews.forEach(function(r) { %>
          <% total += r.rating %>
          <tr>
            <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>"><%= r.userName %></td>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %></td>
            <td></td>
            <td>
              <% if (user && user._id.equals(r.user)) { %>
                <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                  <button type="submit">XX</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }); %>
        <tr>
          <td colspan="3"></td>
          <td><strong><%= (total / skilltoy.reviews.length).toFixed(1) %></strong></td>
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Reviews Yet</h5>
  <% } %>

