<%- include('../partials/header') %>


Show Page landing Page show.ejs

<section id="show-page">
    <div>Brand: </div>
    <div><%= skilltoy.brand %></div>
    <div>Model: </div>
    <div><%= skilltoy.model %></div>
  </section>

<h2>Quick Reviews</h2>

<form id="add-review-form" method="POST" action="/skilltoys/<%= skilltoy._id %>/reviews">
    <label>Review:</label>
    <textarea name="content"></textarea>
    <input type="submit" value="Add Review">
  </form>

  <% if (skilltoy.reviews) { %>
  
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Review</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0 %>
        <% skilltoy.reviews.forEach(function(r) { %>
          <% total += r.rating %>
          <tr>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %></td>
            <td></td>
          </tr>
        <% }); %>
        <tr>
          <td colspan="2"></td>
          <td><strong></strong></td>
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Reviews Yet</h5>
  <% } %>

<%- include('../partials/footer') %>
